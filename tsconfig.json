{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "auto-relay/*": [
        "core/src/*"
      ],
      "auto-relay": [
        "core/src/index.ts"
      ],
      "@auto-relay/typeorm/*": [
        "type-orm/src/*"
      ],
      "@auto-relay/typeorm": [
        "type-orm/src/index.ts"
      ]
    }
  }
}