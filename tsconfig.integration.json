{
  "extends": "@wemaintain/eslint-config/tsconfig.default.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node",
      "jest",
      "jest-extended",
      "reflect-metadata"
    ],
    "baseUrl": "./packages",
    "paths": {
      "auto-relay/*": [
        "core/src/*"
      ],
      "auto-relay": [
        "core/src/index.ts"
      ]
    }
  },
  "include": [
    "tests/**.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}