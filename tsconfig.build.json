{
    "extends": "@wemaintain/eslint-config/tsconfig.default.json",
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "lib",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [
        "node_modules/@types/"
      ],
      "types": [
        "node",
        "jest",
        "jest-extended",
        "reflect-metadata"
      ]
    },
    "include": [
      "src/**.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
}
